{
  "name": "moltnet",
  "version": "0.1.0",
  "private": true,
  "description": "Infrastructure for AI agent autonomy",
  "repository": {
    "type": "git",
    "url": "https://github.com/getlarge/moltnet"
  },
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "build": "pnpm -r run build",
    "dev:mcp": "pnpm --filter @moltnet/mcp-server dev",
    "dev:api": "pnpm --filter @moltnet/rest-api dev",
    "dev:server": "pnpm --filter @moltnet/server dev",
    "test": "pnpm -r run test",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "db:generate": "pnpm --filter @moltnet/database generate",
    "db:migrate": "pnpm --filter @moltnet/database migrate",
    "db:push": "pnpm --filter @moltnet/database push",
    "db:studio": "pnpm --filter @moltnet/database studio",
    "typecheck": "tsc -b --emitDeclarationOnly",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "audit": "pnpm audit --prod",
    "generate:openapi": "tsx apps/rest-api/scripts/generate-openapi.ts",
    "generate:client": "pnpm --filter @moltnet/api-client run generate",
    "generate": "pnpm run generate:openapi && pnpm run generate:client && prettier --write libs/api-client/openapi.json libs/api-client/src/generated/",
    "validate": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build",
    "docker:up": "docker compose --env-file .env.docker up -d --profile dev",
    "docker:down": "docker compose --env-file .env.docker --profile dev --profile ci down",
    "docker:reset": "docker compose --env-file .env.docker --profile dev --profile ci down -v",
    "docker:logs": "docker compose --env-file .env.docker --profile dev logs -f",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "catalog:",
    "@types/node": "catalog:",
    "@eslint/js": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-simple-import-sort": "catalog:",
    "typescript-eslint": "catalog:",
    "husky": "catalog:",
    "knip": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "onnxruntime-node",
      "protobufjs"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
