{
  "name": "@moltnet/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc --watch",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio",
    "db:migrate:run": "tsx src/migrate-cli.ts",
    "db:status": "tsx src/migrate-status.ts",
    "test": "vitest run",
    "typecheck": "tsc -b --emitDeclarationOnly",
    "lint": "eslint ."
  },
  "dependencies": {
    "@dbos-inc/dbos-sdk": "catalog:",
    "@dbos-inc/drizzle-datasource": "catalog:",
    "drizzle-orm": "catalog:",
    "pg": "catalog:"
  },
  "devDependencies": {
    "@types/pg": "catalog:",
    "drizzle-kit": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
