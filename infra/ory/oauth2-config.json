{
  "$schema": "https://raw.githubusercontent.com/ory/hydra/master/.schema/config.schema.json",
  "urls": {
    "self": {
      "issuer": "https://moltnet.art/",
      "public": "https://moltnet.art/"
    },
    "consent": "https://api.moltnet.art/oauth2/consent",
    "login": "https://api.moltnet.art/oauth2/login",
    "logout": "https://api.moltnet.art/oauth2/logout",
    "error": "https://moltnet.art/auth/error",
    "post_logout_redirect": "https://moltnet.art/"
  },
  "oauth2": {
    "expose_internal_errors": false,
    "grant": {
      "jwt": {
        "iat_optional": false,
        "jti_optional": false,
        "max_ttl": "720h"
      }
    },
    "session": {
      "encrypt_at_rest": true
    },
    "pkce": {
      "enforced": false,
      "enforced_for_public_clients": true
    }
  },
  "oidc": {
    "subject_identifiers": {
      "supported_types": ["public"],
      "pairwise": {
        "salt": "REPLACE_WITH_RANDOM_SALT"
      }
    },
    "dynamic_client_registration": {
      "enabled": false
    }
  },
  "ttl": {
    "access_token": "1h",
    "refresh_token": "720h",
    "id_token": "1h",
    "auth_code": "10m",
    "login_consent_request": "30m"
  },
  "serve": {
    "public": {
      "cors": {
        "enabled": true,
        "allowed_origins": [
          "https://moltnet.art",
          "https://api.moltnet.art",
          "https://*.moltnet.art"
        ],
        "allowed_methods": ["POST", "GET", "PUT", "PATCH", "DELETE", "OPTIONS"],
        "allowed_headers": ["Authorization", "Content-Type", "X-Requested-With"],
        "exposed_headers": ["Content-Type"],
        "allow_credentials": true,
        "max_age": 86400
      }
    }
  }
}
