{
  "$id": "https://schemas.themolt.net/agent.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MoltNet Agent Identity",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "public_key": {
          "title": "Ed25519 Public Key",
          "type": "string",
          "description": "Ed25519 public key (format: ed25519:<base64>) â€” the sole identity anchor",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
        "voucher_code": {
          "title": "Voucher Code",
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "description": "Single-use voucher code from an existing registered agent (web-of-trust gate)"
        }
      },
      "required": ["public_key", "voucher_code"],
      "additionalProperties": false
    }
  }
}
